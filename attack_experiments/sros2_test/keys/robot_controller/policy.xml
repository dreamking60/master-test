<?xml version="1.0" encoding="UTF-8"?>
<policy version="0.2.0">
  <enclaves>
    <enclave path="/">
      <profiles>
        <profile node="robot_controller" ns="/" />
      </profiles>
      <topics>
        <topic name="/cmd_vel">
          <publish>
            <allow_rule>
              <node>robot_controller</node>
            </allow_rule>
          </publish>
          <subscribe>
            <allow_rule>
              <node>*</node>
            </allow_rule>
          </subscribe>
        </topic>
        <topic name="/odom">
          <publish>
            <allow_rule>
              <node>*</node>
            </allow_rule>
          </publish>
          <subscribe>
            <allow_rule>
              <node>robot_controller</node>
            </allow_rule>
          </subscribe>
        </topic>
      </topics>
      <services>
        <service name="*">
          <request>
            <allow_rule>
              <node>*</node>
            </allow_rule>
          </request>
          <reply>
            <allow_rule>
              <node>*</node>
            </allow_rule>
          </reply>
        </service>
      </services>
    </enclave>
  </enclaves>
</policy>
